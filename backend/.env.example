# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/credismart?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_change_in_production
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# M-Pesa Configuration
MPESA_API_URL=https://api.mpesa.vm.co.mz
MPESA_PUBLIC_KEY=your_mpesa_public_key
MPESA_SERVICE_PROVIDER_CODE=your_service_provider_code

# e-Mola Configuration
EMOLA_API_URL=https://api.emola.co.mz
EMOLA_API_KEY=your_emola_api_key
EMOLA_MERCHANT_ID=your_emola_merchant_id

# SMS Configuration (Optional - Twilio or local provider)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Default Interest Rate Configuration
DEFAULT_INTEREST_RATE=15
LATE_PAYMENT_FEE_PERCENTAGE=5
